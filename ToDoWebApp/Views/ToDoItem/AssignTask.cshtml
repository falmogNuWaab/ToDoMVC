@model EmployeeTaskViewModel
<h2>Task Assignment Form</h2>
<form method="post">
    <p>Select Employee</p>
    <select name="employeeId">
        @foreach (Employee e in Model.Employees)
        {
            <option value="@e.Id">@e.FullName</option>
        }
    </select>
    <p>Select a Task to assign the Employee</p>
    <select name="toDoId">
        @foreach (ToDoItem t in Model.ToDos)
        {
            <option value="@t.Id">@t.TName</option>
        }
    </select>
    <input type="submit" />
</form>